<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
			 xmlns:viewModels="clr-namespace:ShareLoc.Client.App.ViewModels;assembly=ShareLoc.Client.App"
             x:Class="ShareLoc.Client.App.Views.ImageTakenPage"
			 x:DataType="viewModels:ImageTakenViewModel"
             Title="Share Photo">
	<VerticalStackLayout
		Padding="10"
		Spacing="10"
		VerticalOptions="Center"
		>
		<Image
			x:Name="image"
			Source="{Binding ImageSource}"
			VerticalOptions="FillAndExpand"
			HorizontalOptions="FillAndExpand"
			Aspect="AspectFit" />
		<Button
			Text="Save"
			Command="{Binding ShareImageCommand}" />
		<Button
			Text="Cancel"
			Command="{Binding CancelCommand}" />
	</VerticalStackLayout>
</ContentPage>
